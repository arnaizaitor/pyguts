[MASTER]

# Set the maximum number of nested blocks for function / method body.
max-nested-blocks=5

# Set the maximum number of branches for function / method body.
max-branches=12

# Set the maximum number of attributes for a class.
max-attributes=12

# Set the maximum number of arguments for function / method.
max-args=7

# Set the maximum number of local variables for function / method.
max-locals=15

# Set the maximum number of return / yield for function / method.
max-returns=6

# Set the maximum number of statements in a function / method.
max-statements=50

# Disable the message, report, category or checker with the given id(s).
disable=C0114,C0115,C0116

# Use a blacklisted name for the specified module names.
bad-names=foo,bar,baz

# Enable the message, report, category or checker with the given id(s).
enable=unused-import,unused-variable,unused-argument

# Add files or directories to the blacklist. They should be base names, not paths.
ignore=CVS

# Add files or directories matching the regex patterns to the blacklist.
ignore-patterns=\.svn

# A comma-separated list of package or module names from where C extensions may be loaded.
extension-pkg-whitelist=numpy

# List of interface methods to ignore, separated by a comma.
#ignore-method-docstring=__init__

# List of method names used to declare (i.e. assign) instance attributes.
defining-attr-methods=__init__,__new__,setUp

# List of member names, which should be excluded from the protected-access warning.
#ignore-protected-access=_asdict,_fields,_replace,_source,_make,_replace

[MESSAGES CONTROL]

# Enable the message, report, category or checker with the given id(s).
enable=I,W,E

# Disable the message, report, category or checker with the given id(s).
disable=R,C

# Enable the message, report, category or checker with the given id(s).
#enable=fixme,unused-argument

[REPORTS]

# Set the output format. Available formats are text, parseable, colorized, json.
output-format=text

# Tells whether to display a full report or only the messages.
reports=yes

# Set the maximum number of violations to allow before pylint stops processing.
max-line-length=150

[TYPECHECK]

# Generate output for mypy.
#generate-mypy

# Tells whether missing members accessed in mixin class should be ignored.
ignore-mixin-members=yes

# List of class names for which member attributes should not be checked (useful for classes with dynamically set attributes).
ignored-classes=SQLObject